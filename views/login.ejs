<h1>Login</h1>
<form action="/login" method="POST">
    <div>
        <label for="email">Email</label>
        <input id="email"  type="text" required placeholder="john@doe.com">
    </div>
    <div>
        <label for="password">Password</label>
        <input id="password" type="text" required placeholder="Enter your password John">
    </div>
    <button type="submit">Login</button>
    <% if(messages.error) {%>
    <%= messages.error %>
    <%} %> 
</form>